{
  "[python]": {
    "editor.tabSize": 4
  },
  "diffEditor.renderSideBySide": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.cursorBlinking": "smooth",
  "editor.dragAndDrop": false,
  "editor.fontFamily": "'Fira Code', Menlo, Consolas, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": true,
  "editor.multiCursorModifier": "alt",
  "editor.parameterHints": false,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "none",
  "editor.rulers": [80, 100, 120],
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "same",
  "files.associations": {
    "zshrc": "shellscript"
  },
  "files.exclude": {
    "**/*-min-*": true,
    "**/*-min.*": true,
    "**/*.egg-info": true,
    "**/*.log": true,
    "**/*.min.*": true,
    "**/*.min.css": true,
    "**/*.min.js": true,
    "**/*.pyc": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.nyc_output": true,
    "**/.sass-cache": true,
    "**/.svn": true,
    "**/.venv": true,
    "**/_site": true,
    "**/bower_components": true,
    "**/build": true,
    "**/bundle.*": true,
    "**/coverage": true,
    "**/db.json": true,
    "**/dist": true,
    "**/log": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/tmp": true
  },
  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/bower_components/**": true,
    "**/node_modules/**": true
  },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.enabled": true,
  "gitlens.blame.line.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.gitExplorer.files.layout": "list",
  "html.format.endWithNewline": true,
  "html.format.indentHandlebars": true,
  "python.linting.pep8Enabled": true,
  "python.linting.pylintEnabled": false,
  "search.useIgnoreFiles": true,
  "search.useIgnoreFilesByDefault": true,
  "sublimeTextKeymap.promptV3Features": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.fontFamily": "'Fira Code', Menlo, Consolas, monospace",
  "terminal.integrated.fontLigatures": true,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.scrollback": 10000,
  "window.menuBarVisibility": "toggle",
  "window.title": "${rootPath}${separator}${appName}",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Uno Due Tre",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.showTabs": false,
  "workbench.iconTheme": "simple-icons",
  "workbench.panel.location": "bottom",
  "zenMode.fullScreen": false,
  "explorer.confirmDragAndDrop": false
}
