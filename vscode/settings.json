{
  "[html]": {
    "editor.formatOnSave": false
  },
  "[python]": {
    "editor.tabSize": 4
  },
  "[markdown]": {
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
  },
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.cursorBlinking": "smooth",
  "editor.dragAndDrop": false,
  "editor.fontFamily": "Input, Menlo, Consolas, monospace",
  "editor.fontSize": 14,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": true,
  "editor.multiCursorModifier": "alt",
  "editor.overviewRulerBorder": true,
  "editor.parameterHints": false,
  "editor.renderControlCharacters": false,
  "editor.renderIndentGuides": true,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "none",
  "editor.rulers": [80, 100, 120],
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "same",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "zshrc": "shellscript"
  },
  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/*-min-*": true,
    "**/*-min.*": true,
    "**/*.egg-info": true,
    "**/*.log": true,
    "**/*.min.*": true,
    "**/*.min.css": true,
    "**/*.min.js": true,
    "**/*.pyc": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.nyc_output": true,
    "**/.sass-cache": true,
    "**/.svn": true,
    "**/.venv": true,
    "**/_site": true,
    "**/bower_components": true,
    "**/bundle.*": true,
    "**/coverage": true,
    "**/db.json": true,
    "**/log": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/tmp": true
  },
  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/bower_components/**": true,
    "**/build": true,
    "**/dist": true,
    "**/node_modules/**": true
  },
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.enabled": true,
  "html.format.endWithNewline": true,
  "html.format.indentHandlebars": true,
  "python.linting.pep8Enabled": true,
  "python.linting.pylintEnabled": false,
  "search.exclude": {
    "**/build": true,
    "**/dist": true
  },
  "search.smartCase": true,
  "search.useIgnoreFiles": true,
  "simpleIcons.hideArrows": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.scrollback": 10000,
  "window.menuBarVisibility": "default",
  "window.title": "${rootPath}",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Uno Due Tre",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.showTabs": false,
  "workbench.iconTheme": "simple-icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": true,
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": false,
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.hovers.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.settings.mode": "advanced",
  "gitlens.explorers.avatars": false,
  "gitlens.historyExplorer.avatars": false,
  "gitlens.blame.avatars": false,
  "gitlens.blame.highlight.locations": ["gutter", "line", "overview"]
}
