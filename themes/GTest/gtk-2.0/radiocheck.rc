# vim: set syn=gtkrc:

style "radiocheck" = "button" {
    base[NORMAL]   = shade(1.05, @base_color)
    base[PRELIGHT] = shade(1.15, @base_color)

    base[SELECTED] = shade(1.00, @selected_bg_color)

    bg[SELECTED]   = shade(1.00, @bg_color)
    bg[PRELIGHT]   = shade(1.04, @bg_color)

    text[SELECTED] = @fg_color

    engine "murrine" {
        contrast = 1.20
    }
}
