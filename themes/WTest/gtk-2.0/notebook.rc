# vim: set syn=gtkrc:

style "notebook" {
    xthickness = 2
    ythickness = 2

    bg[ACTIVE]   = shade(0.90, @bg_color)
    bg[NORMAL]   = shade(1.05, @bg_color)

    bg[SELECTED] = shade(1.10, @selected_bg_color)

    # Fallback engine
    engine "murrine" {
        roundness = 1
        contrast = 1.10
    }
}

style "spinbutton-notebook" = "button" {
    bg[NORMAL] = shade(1.10, @bg_color)

    engine "murrine" {
        roundness = 1
    }
}
