<?xml version="1.0"?>
<metacity_theme>
<info>
  <name>MTest</name>
  <author>saikobee</author>
  <copyright>GPLv2</copyright>
  <date>2011</date>
  <description>Metacity is really annoying.</description>
</info>

<constant name="IconTitleSpacing" value="0"/>
<constant name="BorderColor"      value="#ffffff"/>
<constant name="TitleSeparator"   value="#202020"/>
<constant name="TitleColor"       value="#282828"/>

<frame_geometry name="normal">
  <distance name="left_width"           value="1"/>
  <distance name="right_width"          value="1"/>
  <distance name="bottom_height"        value="1"/>
  <distance name="left_titlebar_edge"   value="1"/>
  <distance name="right_titlebar_edge"  value="1"/>
  <distance name="button_width"         value="12"/>
  <distance name="button_height"        value="12"/>
  <distance name="title_vertical_pad"   value="2"/>
  <border name="title_border"  left="4" right="4" top="4" bottom="4"/>
  <border name="button_border" left="4" right="4" top="4" bottom="4"/>
</frame_geometry>

<frame_geometry name="maximized" parent="normal">
  <distance name="left_width"    value="0"/>
  <distance name="right_width"   value="0"/>
  <distance name="bottom_height" value="0"/>
</frame_geometry>

<frame_geometry name="border" parent="normal" has_title="false">
  <distance name="button_width"  value="0"/>
  <distance name="button_height" value="0"/>
  <border name="title_border"  left="0" right="0" top="0" bottom="0"/>
  <border name="button_border" left="0" right="0" top="0" bottom="0"/>
</frame_geometry>

<draw_ops name="title-text-focused">
<!-- Code to align text to the right
<title color="#ffffff" x="width - title_width" y="(height - title_height) / 2"/>
-->
<title color="#ffffff" x="0" y="(height - title_height) / 2"/>
</draw_ops>

<draw_ops name="title-text-unfocused">
<title color="#555555" x="0" y="(height - title_height) / 2"/>
</draw_ops>

<draw_ops name="blank">
</draw_ops>

<draw_ops name="title">
  <rectangle color="TitleColor" x="0" y="0" width="width" height="height" filled="true"/>
  <line color="TitleSeparator" x1="0" y1="height - 1" x2="width" y2="height - 1"/>
  <line color="BorderColor" x1="0" y1="0" x2="width" y2="0"/>
  <line color="BorderColor" x1="0" y1="0" x2="0" y2="height"/>
  <line color="BorderColor" x1="width - 1" y1="0" x2="width - 1" y2="height"/>
</draw_ops>

<draw_ops name="title-maximized">
  <rectangle color="TitleColor" x="0" y="0" width="width" height="height" filled="true"/>
  <line color="TitleSeparator" x1="0" y1="height - 2" x2="width" y2="height - 2"/>
  <line color="BorderColor" x1="0" y1="0" x2="width" y2="0"/>
</draw_ops>

<draw_ops name="title-shaded">
  <rectangle color="TitleColor" x="0" y="0" width="width" height="height" filled="true"/>
  <line color="BorderColor" x1="0" y1="0" x2="width" y2="0"/>
  <line color="BorderColor" x1="0" y1="height - 1" x2="width" y2="height - 1"/>
  <line color="BorderColor" x1="0" y1="0" x2="0" y2="height"/>
  <line color="BorderColor" x1="width - 1" y1="0" x2="width - 1" y2="height"/>
</draw_ops>

<draw_ops name="frame-left-focused">
  <rectangle color="TitleColor" x="0" y="0" width="width" height="height" filled="true"/>
  <line color="BorderColor" x1="0" y1="0" x2="0" y2="height"/>
</draw_ops>

<draw_ops name="frame-right-focused">
  <rectangle color="TitleColor" x="0" y="0" width="width" height="height"/>
  <line color="BorderColor" x1="width - 1" y1="0" x2="width - 1" y2="height"/>
</draw_ops>

<draw_ops name="frame-bottom-focused">
  <rectangle color="TitleColor" x="0" y="0" width="width" height="height" filled="true"/>
  <line color="BorderColor" x1="0" y1="0" x2="0" y2="height"/>
  <line color="BorderColor" x1="width - 1" y1="0" x2="width - 1" y2="height"/>
  <line color="BorderColor" x1="0" y1="height - 1" x2="width" y2="height - 1"/>
</draw_ops>

<draw_ops name="button">
    <image filename="button.png" x="0" y="2" width="10" height="10"/>
</draw_ops>

<draw_ops name="button-unfocused">
    <image filename="button-unfocused.png" x="0" y="2" width="10" height="10"/>
</draw_ops>

<frame_style name="normal-focused" geometry="normal">
  <piece position="titlebar"    draw_ops="title"/>
  <piece position="left_edge"   draw_ops="frame-left-focused"/>
  <piece position="right_edge"  draw_ops="frame-right-focused"/>
  <piece position="bottom_edge" draw_ops="frame-bottom-focused"/>
  <piece position="title"       draw_ops="title-text-focused"/>

  <button function="close" state="normal"   draw_ops="button"/>
  <button function="close" state="prelight" draw_ops="button"/>
  <button function="close" state="pressed"  draw_ops="button"/>

  <button function="minimize" state="normal"   draw_ops="button"/>
  <button function="minimize" state="prelight" draw_ops="button"/>
  <button function="minimize" state="pressed"  draw_ops="button"/>

  <button function="maximize" state="normal"   draw_ops="button"/>
  <button function="maximize" state="prelight" draw_ops="button"/>
  <button function="maximize" state="pressed"  draw_ops="button"/>

  <button function="menu" state="normal"   draw_ops="button"/>
  <button function="menu" state="prelight" draw_ops="button"/>
  <button function="menu" state="pressed"  draw_ops="button"/>
</frame_style>

<frame_style name="normal-maximized" geometry="maximized" parent="normal-focused">
  <piece position="titlebar" draw_ops="title-maximized"/>
  <piece position="title"    draw_ops="title-text-focused"/>
</frame_style>

<frame_style name="normal-unfocused" geometry="normal">
  <piece position="titlebar"    draw_ops="title"/>
  <piece position="left_edge"   draw_ops="frame-left-focused"/>
  <piece position="right_edge"  draw_ops="frame-right-focused"/>
  <piece position="bottom_edge" draw_ops="frame-bottom-focused"/>
  <piece position="title"       draw_ops="title-text-unfocused"/>

  <button function="close" state="normal"   draw_ops="button-unfocused"/>
  <button function="close" state="prelight" draw_ops="button-unfocused"/>
  <button function="close" state="pressed"  draw_ops="button-unfocused"/>

  <button function="minimize" state="normal"   draw_ops="button-unfocused"/>
  <button function="minimize" state="prelight" draw_ops="button-unfocused"/>
  <button function="minimize" state="pressed"  draw_ops="button-unfocused"/>

  <button function="maximize" state="normal"   draw_ops="button-unfocused"/>
  <button function="maximize" state="prelight" draw_ops="button-unfocused"/>
  <button function="maximize" state="pressed"  draw_ops="button-unfocused"/>

  <button function="menu" state="normal"   draw_ops="button-unfocused"/>
  <button function="menu" state="prelight" draw_ops="button-unfocused"/>
  <button function="menu" state="pressed"  draw_ops="button-unfocused"/>
</frame_style>

<frame_style name="normal-shaded-focused" geometry="normal" parent="normal-focused">
  <piece position="titlebar" draw_ops="title-shaded"/>
</frame_style>

<frame_style name="normal-shaded-unfocused" geometry="normal" parent="normal-unfocused">
  <piece position="titlebar" draw_ops="title-shaded"/>
</frame_style>

<frame_style_set name="normal">
  <frame focus="yes" state="normal" resize="both" style="normal-focused"/>
  <frame focus="no"  state="normal" resize="both" style="normal-unfocused"/>
  <frame focus="yes" state="maximized" style="normal-maximized"/>
  <frame focus="no"  state="maximized" style="normal-maximized"/>
  <frame focus="yes" state="shaded" style="normal-shaded-focused"/>
  <frame focus="no"  state="shaded" style="normal-shaded-unfocused"/>
  <frame focus="yes" state="maximized_and_shaded" style="normal-shaded-focused"/>
  <frame focus="no"  state="maximized_and_shaded" style="normal-shaded-unfocused"/>
</frame_style_set>

<window type="normal"       style_set="normal"/>
<window type="dialog"       style_set="normal"/>
<window type="modal_dialog" style_set="normal"/>
<window type="menu"         style_set="normal"/>
<window type="utility"      style_set="normal"/>
<window type="border"       style_set="normal"/>

<menu_icon function="close"      state="normal" draw_ops="button"/>
<menu_icon function="maximize"   state="normal" draw_ops="button"/>
<menu_icon function="unmaximize" state="normal" draw_ops="button"/>
<menu_icon function="minimize"   state="normal" draw_ops="button"/>
</metacity_theme>
