# vim: set syn=gtkrc:

style "notebook" {
    xthickness = 2
    ythickness = 2

    bg[ACTIVE]   = shade(0.95, @bg_color)
    bg[NORMAL]   = shade(1.00, @bg_color)

    bg[SELECTED] = shade(1.10, @selected_bg_color)

    # Fallback engine
    engine "murrine" {
        roundness = 0
        contrast = 0.50
    }

    engine "industrial" {
        contrast = 0.30
        rounded_buttons = FALSE
    }
}
