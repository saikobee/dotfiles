widget_class "*<GtkNotebook>"                   style "notebook"

widget_class "*<GtkComboBoxEntry>*" style "comboboxentry"
widget_class "*<GtkCombo>*"         style "comboboxentry"

widget_class "*<GtkMenu>*"              style "menu"
widget_class "*<GtkMenuItem>*"          style "menu-item"
widget_class "*<GtkSeparatorMenuItem>*" style "separator-menu-item"

widget_class "*<GtkFrame>"             style "frame"
widget_class "*.<GtkFrame>.<GtkLabel>" style "frame-title"
widget_class "*.<GtkTreeView>*"        style "treeview"

#widget_class "*<GtkStatusbar>*"  style "wider"
widget_class "*<GtkProgressBar>" style "progressbar"

# Treeview header
widget_class "*.<GtkTreeView>.<GtkButton>" style "treeview-header"
widget_class "*.<GtkCTree>.<GtkButton>"    style "treeview-header"
widget_class "*.<GtkList>.<GtkButton>"     style "treeview-header"
widget_class "*.<GtkCList>.<GtkButton>"    style "treeview-header"

widget_class "*<GtkToolbar>.*"   style "toolbar"

#Panel
widget "*PanelWidget*"      style "panel"
widget "*PanelApplet*"      style "panel"
widget "*fast-user-switch*" style "panel" # Workaround for Fast User Switch applet
class "PanelApp*"           style "panel"
class "PanelToplevel*"      style "panel"
#The panel menubar
widget_class "*Panel*<GtkMenuBar>*" style:highest "panel"

# The window of the tooltip is called "gtk-tooltip"
widget "gtk-tooltip*" style "tooltips"


###################################################
# Special cases and work arounds
###################################################

widget "MozillaGtkWidget*Toolbar*"  style "default"
widget "MozillaGtkWidget*Frame*"    style "default"

# Fixes toolbars inside frames. Will be overridden later.
style "toolbar-flat" = "default" {
    xthickness = 3
    ythickness = 3
    engine "murrine" {
        toolbarstyle = 0
    }
}
widget_class "*.*.*.*.*.*Toolbar*"   style "toolbar-flat"
widget_class "*.*.*.*.*.*HandleBox*" style "toolbar-flat"

widget_class "*ToolButton*" style "smaller-text"
widget_class "*Statusbar*"  style "smaller-text"
widget_class "*Mail*"       style "panel"

class "MetaFrames" style: highest "dark"

widget "*eog*"             style: highest "dark"
widget "*Eog*"             style: highest "dark"
widget "*gimp*"            style: highest "dark"
widget "*Gimp*"            style: highest "dark"
widget "*SPDesktopWidget*" style: highest "dark"
widget "*Moz*Gtk*"         style: highest "dark"

style "pidgin-status-box" {
    bg[NORMAL]      = @bg_color
    bg[PRELIGHT]    = shade(1.15, @bg_color)

    engine "murrine" {
        gradient_shades = {1.00, 1.00, 1.00, 1.00}
    }
}
widget "*pidgin_blist_statusbox*" style: highest "pidgin-status-box"

class        "GtkStatusbar"   style: highest "statusbar"
widget_class "*GtkStatusbar*" style: highest "statusbar"
widget       "*GtkStatusbar*" style: highest "statusbar"

