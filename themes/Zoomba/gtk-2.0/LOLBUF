style "pidgin-status-box" {
    bg[NORMAL]      = @bg_color
    bg[PRELIGHT]    = shade(1.05, @bg_color)

    engine "murrine" {
        contrast = 0.75
        gradient_shades = {1.00, 1.00, 1.05, 1.10}
    }
}
widget "*pidgin_blist_statusbox*" style: highest "pidgin-status-box"

style "scrolled-window" {
    GtkScrolledWindow::border-width = 4
    xthickness = 4
    ythickness = 4
}
widget "GtkScrolledWindow" style: highest "scrolled-window"
widget "Gtk?Box"           style "wider"
